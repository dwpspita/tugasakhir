<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onprogress">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/schedule_if"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/wait"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Order"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="60dp"
                        android:textColor="@color/maincolor"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/orderimg_id"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/price"
                        />
                    <TextView
                        android:id="@+id/textorderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order ID"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/orderimg_id"
                        android:layout_marginTop="55dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/textorderid"
                        android:layout_marginTop="55dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5576"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/textorderid"
                        android:layout_marginTop="55dp"
                        />
                    <ImageView
                        android:id="@+id/status_id"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/status"
                        />


                    <TextView
                        android:id="@+id/textstatusid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/status_id"
                        android:layout_marginTop="85dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/textstatusid"
                        android:layout_marginTop="85dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting for Drop Off"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/textstatusid"
                        android:layout_marginTop="85dp"
                        />

                </RelativeLayout>



            </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>